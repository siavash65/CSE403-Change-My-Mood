<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item 
        android:drawable="@drawable/facebook_clicked"
        android:state_pressed="true">
        <shape>
            <stroke android:width="1px" android:color="#5D478B" />

            <corners android:radius="15dp" />

            <gradient android:angle="270" android:endColor="#5D478B" android:startColor="#5D478B" />

            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- focused -->
    <item 
        android:drawable="@drawable/facebook_clicked"
        android:state_focused="true">
        <shape>
            <stroke android:width="1px" android:color="#5D478B" />

            <corners android:radius="15dp" />

            <gradient android:angle="270" android:endColor="#5D478B" android:startColor="#5D478B" />

            <corners android:radius="15dp" />
        </shape>
    </item>

    <!-- default -->

    <item
        android:drawable="@drawable/facebook_default">
        <shape>
            <stroke android:width="1px" android:color="#5D478B" />

            <corners android:radius="15dp" />

            <gradient android:angle="270" android:endColor="#5D478B" android:startColor="#5D478B" />

            <corners android:radius="15dp" />
        </shape>
    </item>

</selector>