<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" 
    android:background="#FFFFFF">
   
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >        
        
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Change My Mood"
        android:textSize="20sp"
        android:layout_centerHorizontal="true" />
        
        <Button
            android:id="@+id/WithoutLogin"
            android:layout_width="fill_parent"
            android:layout_height="70sp"
            android:text="Continue without signin" 
            android:textSize="20sp"
            android:layout_above="@+id/FacebookLogin" 
            android:layout_centerHorizontal="true"
            android:layout_marginBottom= "20dp"
            android:background="@drawable/hunlan_buttons" />

        <Button
            android:id="@+id/FacebookLogin"
            android:layout_width="fill_parent"
            android:layout_height="70sp"
            android:text="Signin with Facebook account"
            android:textSize="20sp"
            android:layout_centerHorizontal="true" 
            android:layout_marginBottom= "50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/hunlan_buttons"/>

        <ImageView
            android:id="@+id/FrontImage"
            android:layout_width="200px"
            android:layout_height="200px"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cmm"
            android:layout_marginTop="50dp" />

    </RelativeLayout>

</LinearLayout>